@model List<Project.AndroidIosApp.Dtos.SupportDtos.GetSupportDto>

@{
    Layout = "_AdminLayout";
}

<!-- table section -->
<div class="col-md-12">
    <div class="white_shd full margin_bottom_30">
        <div class="full graph_head">
            <div class="heading1 margin_0">
                <h2>Messages</h2>
            </div>
        </div>
        <div class="table_section padding_infor_info">
            <a href="/Admin/AdminMessage/Insert" class="btn btn-outline-info mb-2">Add New Message</a>
            <div class="table-responsive-sm">
                <table class="table table-dark table-striped">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Title</th>
                            <th>Content</th>
                            <th>Sender</th>
                            <th>Receiver</th>
                            <th>SenderName</th>
                            <th>ReceiverName</th>
                            <th>Device Name</th>
                            <th>CreateDate</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th>@item.Id</th>
                                <th>@item.Title</th>
                                @if (item.Content.Length > 30)
                                {
                                    <td>@item.Content.Substring(0,30)...</td>
                                }
                                else
                                {
                                    <td>@item.Content</td>
                                }
                                <td>@item.Sender</td>
                                <td>@item.Receiver</td>
                                <td>@item.SenderName</td>
                                <td>@item.ReceiverName</td>
                                <td>@item.Device.DeviceName</td>
                                <td>@item.Date</td>
                                <td>@item.Status</td>
                                <td><a href="/Admin/AdminMessage/Update/@item.Id" class="btn btn-outline-success">Update</a></td>
                                <td><a href="/Admin/AdminMessage/Delete/@item.Id" class="btn btn-outline-danger">Delete</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!-- table section -->