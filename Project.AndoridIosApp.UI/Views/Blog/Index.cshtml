@model List<Project.AndroidIosApp.Dtos.BlogDtos.GetBlogDto>
@{
    Layout = "_MemberLayout";
}



<!-- Normal Breadcrumb Begin -->
<section class="normal-breadcrumb set-bg" data-setbg="/img/deneme.gif">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="normal__breadcrumb__text">
                    <h2 style="margin-top:70px;">Our Blog</h2>
                    <p style="color: #F535AA; font-weight:bold; margin-top:55px;">Welcome to the official IosAndroid blog.</p>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Normal Breadcrumb End -->
<!-- Blog Section Begin -->

<div class="container my-4">
    <div class="row">
        <div class="col-md-12 order-1 order-md-0">
            <nav>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Blog">Blog</a></li>
                </ol>
            </nav>
            @foreach (var item in Model)
            {
            <!-- card ekleyelim -->
                <div class="card mb-2 shadow" style="background-color:#F7E6DA">
                <div class="row">
                    <div class="col-4">
                        <img src="~/img/contact.jpeg" alt="" class="img-fluid rounded-start">
                    </div>
                    <div class="col-8">
                        <div class="card-body">
                            <a asp-controller="BlogComment" asp-action="BlogDetails" asp-route-id="@item.Id" class="card-title" style="color:black; text-transform:uppercase;">@item.Title</a>
                            <p class="card-text">@item.Subtitle</p>
                            <br/>
                            <br/>
                            <br/>
                            <br/>
                            <p><span class="icon_calendar"></span> @item.CreateDate</p>
                        </div>
                    </div>
                </div>
            </div>
            }

            <!-- pagination ekleyelim alta bir tane -->
            <nav class="my-5">
                <ul class="pagination justify-content-end">
                    <li class="page-item disabled">
                        <a href="#" class="page-link">Previous</a>
                    </li>
                    <li class="page-item"><a href="" class="page-link">1</a></li>
                    <li class="page-item"><a href="" class="page-link">2</a></li>
                    <li class="page-item"><a href="" class="page-link">3</a></li>
                    <li class="page-item"><a href="" class="page-link">Next</a></li>
                </ul>
            </nav>

        </div>
    </div>
</div>
</section>
<!-- Blog Section End -->