@model List<Project.AndroidIosApp.Dtos.BlogCommentDtos.GetBlogCommentDto>

@{
    Layout = "_AdminLayout";
}

<!-- table section -->
<div class="col-md-12">
    <div class="white_shd full margin_bottom_30">
        <div class="full graph_head">
            <div class="heading1 margin_0">
                <h2>Blog Comments</h2>
            </div>
        </div>
        <div class="table_section padding_infor_info">
            <a href="/Admin/AdminBlogComment/Insert" class="btn btn-outline-info mb-2">Add New Blog Comment</a>
            <div class="table-responsive-sm">
                <table class="table table-dark table-striped">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Content</th>
                            <th>ProjectUser Name</th>
                            <th>ProjectUser Lastname</th>
                            <th>Blog Title</th>
                            <th>CreateDate</th>
                            <th>UpdateDate</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th>@item.Id</th>
                                @if (item.Content.Length > 30)
                                {
                                    <td>@item.Content.Substring(0,30)...</td>
                                }
                                else
                                {
                                    <td>@item.Content</td>
                                }
                                <td>@item.ProjectUser.Firstname</td>
                                <td>@item.ProjectUser.Lastname</td>
                                @if (item.Blog.Title.Length > 30)
                                {
                                    <td>@item.Blog.Title.Substring(0,30)...</td>
                                }
                                else
                                {
                                    <td>@item.Blog.Title</td>
                                }
                                <td>@item.CreateDate</td>
                                <td>@item.UpdateDate</td>
                                <td>@item.Status</td>
                                <td><a href="/Admin/AdminBlogComment/Update/@item.Id" class="btn btn-outline-success">Update</a></td>
                                <td><a href="/Admin/AdminBlogComment/Delete/@item.Id" class="btn btn-outline-danger">Delete</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!-- table section -->