@model Project.AndroidIosApp.Dtos.BlogDtos.GetBlogDto

@{
    Layout = "_MemberLayout";
}


<!-- Blog Details Section Begin -->
<section class="blog-details spad">
    <div class="container">
        <div class="row d-flex justify-content-center">
            <div class="col-lg-12">
                <div class="blog__details__pic">
                    <img src="~/img/blog/blogdetail.png" alt="">
                </div>
            </div>
            <div class="col-lg-8">
                <div class="blog__details__title">
                    <h6>Create Date <span>- @Model.CreateDate</span></h6>
                    <h6>Create From <span>- @Model.Company</span></h6>
                    <h2>@Model.Title</h2>
                    <h3>@Model.Subtitle</h3>
                </div>
            </div>
            <div class="col-lg-8">
                <div class="blog__details__content">
                    <div class="blog__details__text">
                        <p>
                            @Model.Description
                        </p>
                    </div>
                    @if (Model.Image1 != null || Model.Description2 != null)
                    {
                        <div class="blog__details__item__text">
                            @if (Model.Image1 != null)
                            {
                                <div class="anime__details__pic set-bg" data-setbg="@Model.Image1"></div>
                            }
                            @if (Model.Description2 != null)
                            {
                                <p>
                                    @Model.Description2
                                </p>
                            }
                        </div>
                    }

                    @if (Model.Image2 != null || Model.Description3 != null)
                    {
                        <div class="blog__details__item__text">
                            @if (Model.Image2 != null)
                            {
                                <div class="anime__details__pic set-bg" data-setbg="@Model.Image2"></div>

                            }
                            @if (Model.Description3 != null)
                            {
                                <p>
                                    @Model.Description3
                                </p>
                            }
                        </div>
                    }

                    @if (Model.Image3 != null || Model.Description4 != null)
                    {
                        <div class="blog__details__item__text">
                            @if (Model.Image3 != null)
                            {

                                <div class="anime__details__pic set-bg" data-setbg="@Model.Image3"></div>
                            }
                            @if (Model.Description4 != null)
                            {
                                <p>
                                    @Model.Description4
                                </p>
                            }
                        </div>
                    }

                    @*yorumlar*@
                    <div class="blog__details__comment">
                        <h4>@ViewBag.CommentCount Comments</h4>
                        @foreach (var item in ViewBag.BlogComment)
                        {
                           <div class="anime__review__item">
                            <div class="anime__review__item__pic">
                                <img src=@item.ProjectUser.ImageUrl alt="">
                            </div>
                            <div class="anime__review__item__text">
                                <h6>@item.ProjectUser.Firstname @item.ProjectUser.Lastname - <span>@item.CreateDate Hour ago</span></h6>
                                <p>
                                    @item.Content
                                </p>
                            </div>
                        </div>
                        }
                    </div>

                    @*yorumyap*@
                    <div class="blog__details__form">
                        <h4>Leave A Commnet</h4>
                        <form asp-controller="BlogComment" asp-action="AddBlogComment" method="post">
                            <div class="row">
                                <div class="col-lg-12">
                                    <input type="text" name="BlogId" value="@ViewBag.Id"/>
                                    <input type="text" name="ProjectUserId" value="@ViewBag.Id"/>
                                    <textarea name="Content" placeholder="Message"></textarea>
                                    <button type="submit" class="site-btn">Send Message</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Blog Details Section End -->
