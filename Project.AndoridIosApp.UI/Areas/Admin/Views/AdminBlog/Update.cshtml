@model Project.AndroidIosApp.Dtos.BlogDtos.UpdateBlogDto

@{
    Layout = "_AdminLayout";
}

<link href="~/CustomStyle/AdminDeviceCommentStyleSheet.css" rel="stylesheet" />

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <p class="card-description"> Update Blog Panel </p>
            <form asp-controller="AdminBlog" asp-action="Update" class="forms-sample" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="All"></div>
                <input type="hidden" asp-for="@Model.Id" />
                <div class="form-group">
                    <label>Title</label>
                    <input type="text" class="form-control" asp-for="@Model.Title">
                </div>
                <div class="form-group">
                    <label>Subtitle</label>
                    <input type="text" class="form-control" asp-for="@Model.Subtitle">
                </div>
                <div class="form-group">
                    <label>Description</label>
                    <input type="text" class="form-control" asp-for="@Model.Description">
                </div>
                <div class="form-group">
                    <label>Description2</label>
                    <input type="text" class="form-control" asp-for="@Model.Description2">
                </div>
                <div class="form-group">
                    <label>Description3</label>
                    <input type="text" class="form-control" asp-for="@Model.Description3">
                </div>
                <div class="form-group">
                    <label>Description3</label>
                    <input type="text" class="form-control" asp-for="@Model.Description4">
                </div>
                <div class="form-group">
                    <label>Company</label>
                    <input type="text" class="form-control" asp-for="@Model.Company">
                </div>
                <div class="form-group">
                    <label>Image1</label>
                    <input class="form-control" type="text" value="@Model.Image1" readonly="readonly">
                    <br />
                    <input type="file" class="form-control-file" name="Image1">
                </div>
                <div class="form-group">
                    <label>Image2</label>
                    <input class="form-control" type="text" value="@Model.Image2" readonly="readonly">
                    <br />
                    <input type="file" class="form-control-file" name="Image2">
                </div>
                <div class="form-group">
                    <label>Image3</label>
                    <input class="form-control" type="text" value="@Model.Image3" readonly="readonly">
                    <br />
                    <input type="file" class="form-control-file" name="Image3">
                </div>
                <div class="form-group">
                    <label>Status</label>
                    <div class="form-check d-flex flex-row justify-content-md-start">
                        <div>
                            <input class="form-check-input" id="radio1" type="radio" name="Status" value="true" @(Model.Status ? "checked" : "")>
                            <label for="radio1" class="form-check-label">Active</label>
                        </div>
                        <div class="ml-5">
                            <input class="form-check-input" id="radio2" type="radio" name="Status" value="false" @(Model.Status ? "" : "checked")>
                            <label for="radio2" class="form-check-label">Inactive</label>
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary mr-2">Save</button>
                <a href="/Admin/AdminBlog/Index" class="btn btn-dark">Cancel</a>
            </form>
        </div>
    </div>
</div>




