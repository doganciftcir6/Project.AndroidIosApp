@model Project.AndroidIosApp.Dtos.DeviceDtos.GetDeviceDto

@{
    Layout = "_MemberLayout";
}

<!-- Breadcrumb Begin -->
<div class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb__links">
                    <a asp-controller="Home" asp-action="Index"><i class="fa fa-home"></i> Home</a>
                    <a asp-controller="Device" asp-action="Index">Devices</a>
                    <span>@Model.DeviceName</span>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumb End -->
<!-- Anime Section Begin -->
<section class="anime-details spad">
    <div class="container">
        <div class="anime__details__content">
            <div class="row">
                <div class="col-lg-3">
                    <div class="anime__details__pic set-bg" data-setbg="@Model.ImageUrl">
                        <div class="comment"><i class="fa fa-comments"></i> @Model.OS.Definition</div>
                        <div class="view"><i class="fa fa-eye"></i> @Model.DeviceType.Definition</div>
                    </div>
                </div>
                <div class="col-lg-9">
                    <div class="anime__details__text">
                        <div class="anime__details__title">
                            <h3>@Model.DeviceName</h3>
                        </div>
                        <div class="anime__details__rating">
                            <div class="rating">
                                <a href="#"><i class="fa fa-star"></i></a>
                                <a href="#"><i class="fa fa-star"></i></a>
                                <a href="#"><i class="fa fa-star"></i></a>
                                <a href="#"><i class="fa fa-star"></i></a>
                                <a href="#"><i class="fa fa-star-half-o"></i></a>
                            </div>
                            <span>1.029 Votes</span>
                        </div>
                        <div class="anime__details__widget">
                            <div class="row">
                                <div class="col-lg-6 col-md-6">
                                    <ul>
                                        <li><span>Device Type:</span> @Model.DeviceType.Definition </li>
                                        <li><span>OS:</span> @Model.OS.Definition </li>
                                        <li><span>CPU Score:</span> @Model.CPU </li>
                                        <li><span>GPU Score:</span> @Model.GPU </li>
                                        <li><span>MEM Score:</span> @Model.MEM</li>
                                    </ul>
                                </div>
                                <div class="col-lg-6 col-md-6">
                                    <ul>
                                        <li><span>UX Score:</span> @Model.UX</li>
                                        <li><span>Total Score:</span> @Model.TotalScore </li>
                                        <li><span>Price:</span> @Model.Price ₺ </li>
                                        <li><span>ReleaseYear:</span> @Model.ReleaseYear </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="anime__details__btn">
                            <a href="#" class="follow-btn"><i class="fa fa-heart-o"></i> Follow</a>
                            <a asp-controller="Help" asp-action="Index" class="watch-btn">
                                <span>What do they mean?</span> <i class="fa fa-angle-right"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        @*YORUM KISMI*@
        <div class="row">
            <div class="col-lg-8 col-md-8">
                <div class="anime__details__review">
                    <div class="section-title">
                        <h5>Reviews</h5>
                    </div>
                    <h4 style="text-decoration: underline;">@ViewBag.CommentCount Comments</h4>
                    <br />
                    @foreach (var item in ViewBag.Comments)
                    {
                        <div class="anime__review__item">
                            <div class="anime__review__item__pic">
                                <img src="~/userImage/@item.ProjectUser.ImageUrl" alt="">
                            </div>
                            <div class="anime__review__item__text">
                                <h6>@item.ProjectUser.Firstname @item.ProjectUser.Lastname - <span>@item.CreateDate Hour ago</span></h6>
                                <p>
                                    @item.Content
                                </p>
                            </div>
                        </div>
                    }
                </div>
                @*yorumyap*@
                <div class="anime__details__form">
                    <div class="section-title">
                        <h5>Your Comment</h5>
                    </div>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <form asp-controller="Comment" asp-action="AddComment" method="post">
                            <input type="hidden" name="DeviceId" value="@ViewBag.AddComment" />
                            <input type="hidden" name="ProjectUserId" value="@ViewBag.UserId" />
                            <textarea placeholder="Your Comment" name="Content"></textarea>
                            <button onclick="alert('Yorumunuz admine iletilmiştir. Yorumunuzun gerekli kontrolleri sağlanıp yayınlanacaktır. Teşekkür ederiz.');" type="submit"><i class="fa fa-location-arrow"></i> Send</button>
                        </form>
                    }
                    else
                    {
                        <div class="alert alert-warning alert-dismissible fade show" role="alert">
                            <h3>Uyarı!</h3>
                            <p>Yorum yapmak için giriş yapmanız gerekmektedir. <a class="btn btn-sm btn-success ml-2" asp-controller="Auth" asp-action="SignIn">Giriş YAP</a></p>
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">×</span>
                            </button>
                        </div>
                    }
                </div>
            </div>

            @*sidebar*@
            @await Component.InvokeAsync("DeviceDetailSideBarComponent")
        </div>
    </div>
</section>

