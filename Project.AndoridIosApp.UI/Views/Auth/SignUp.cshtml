@model UserCreateModel

@{
    Layout = "_MemberLayout";
}


<!-- Normal Breadcrumb Begin -->
<section class="normal-breadcrumb set-bg" data-setbg="/img/kullanıcı.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="normal__breadcrumb__text">
                    <h2>Sign Up</h2>
                    <p>Welcome to the official IosAndroid.</p>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Normal Breadcrumb End -->
<!-- Signup Section Begin -->
<section class="signup spad">
    <div class="container">
        <div class="login__form">
            <h3>Sign Up</h3>
            <form asp-controller="Auth" asp-action="SignUp" method="post">
                <div  asp-validation-summary="All"></div>
                <div class="row">
                    <div class="col-lg-5">
                        <h5>Email</h5>
                        <div class="input__item">
                            <input type="text" placeholder="Email address" asp-for="@Model.Email">
                            <span class="icon_mail"></span>
                        </div>
                        <h5>Username</h5>
                        <div class="input__item">
                            <input type="text" placeholder="Username" asp-for="@Model.Username">
                            <span class="icon_profile"></span>
                        </div>
                        <h5>Name</h5>
                        <div class="input__item">
                            <input type="text" placeholder="Your Name" asp-for="@Model.Firstname">
                            <span class="icon_profile"></span>
                        </div>
                        <h5>Lastname</h5>
                        <div class="input__item">
                            <input type="text" placeholder="Your LastName" asp-for="@Model.Lastname">
                            <span class="icon_profile"></span>
                        </div>
                        <h5>Gender</h5>
                        <div class="mb-3">
                            <select class="form-select" asp-items="@Model.Genders" asp-for="@Model.GenderId">
                                <option value="0">Bir cinsiyet seçiniz.</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-lg-7">
                        <div class="login__form">
                            <h5>Password</h5>
                            <div class="input__item mb-3">
                                <input type="text" placeholder="Password" asp-for="@Model.Password">
                                <span class="icon_lock"></span>
                            </div>
                            <h5>PasswordVerify</h5>
                            <div class="input__item">
                                <input type="text" placeholder="PasswordVerify" asp-for="@Model.PasswordVerify">
                                <span class="icon_lock"></span>
                            </div>
                            <h5>Phone</h5>
                            <div class="input__item">
                                <input type="text" placeholder="Phone Number" asp-for="@Model.PhoneNumber">
                                <span class="icon_lock"></span>
                            </div>
                            <h5>Image</h5>
                            <div class="input__item">
                                <input class="form-control" type="file" asp-for="@Model.ImageUrl">
                            </div>
                        </div>
                    </div>
                </div>
                <button type="submit" style="margin-left:800px;" class="site-btn">Login Now</button>
            </form>
            <h5>Already have an account? <a asp-controller="Auth" asp-action="SignIn">Log In!</a></h5>
        </div>
    </div>
</section>
<!-- Signup Section End -->