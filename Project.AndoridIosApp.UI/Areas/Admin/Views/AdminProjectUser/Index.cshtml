@model List<Project.AndroidIosApp.Dtos.ProjectUser.GetProjectUserDto>

@{
    Layout = "_AdminLayout";
}

<style>
    .image{
        width: 40px;
        height: 40px;
        border: solid 3px black;
        border-radius: 10px;
    }
</style>

<!-- table section -->
<div class="col-md-12">
    <div class="white_shd full margin_bottom_30">
        <div class="full graph_head">
            <div class="heading1 margin_0">
                <h2>ProjectUsers</h2>
            </div>
        </div>
        <div class="table_section padding_infor_info">
            <a href="/Admin/AdminProjectUser/Insert" class="btn btn-outline-info mb-2">Add New ProjectUser</a>
            <div class="table-responsive-sm">
                <table class="table table-dark table-striped">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Image</th>
                            <th>Username</th>
                            <th>Firstname</th>
                            <th>Lastname</th>
                            <th>Phone</th>
                            <th>Email</th>
                            <th>Gender</th>
                            <th>Update</th>
                            <th>Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th>@item.Id</th>
                                <th><img class="image" src="~/userImage/@item.ImageUrl"></th>
                                <td>@item.Username</td>
                                <td>@item.Firstname</td>
                                <td>@item.Lastname</td>
                                <td>@item.PhoneNumber</td>
                                <td>@item.Email</td>
                                <td>@item.Gender.Definition</td>
                                <td><a href="/Admin/AdminProjectUser/Update/@item.Id" class="btn btn-outline-success">Update</a></td>
                                <td><a href="/Admin/AdminProjectUser/Delete/@item.Id" class="btn btn-outline-danger">Delete</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!-- table section -->