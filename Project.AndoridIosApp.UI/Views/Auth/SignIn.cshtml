@model Project.AndroidIosApp.Dtos.ProjectUser.LoginProjectUserDto
@{
    Layout = "_MemberLayout";
}

<div asp-validation-summary="All"></div>

<!-- Normal Breadcrumb Begin -->
<section class="normal-breadcrumb set-bg" data-setbg="/img/login.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="normal__breadcrumb__text">
                    <h2>Login</h2>
                    <p>Welcome to the official IosAndroid.</p>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Normal Breadcrumb End -->
<!-- Login Section Begin -->
<section class="login spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="login__form">
                    <h3>Login</h3>
                    <form asp-controller="Auth" asp-action="SignIn" method="post">
                        <div class="input__item">
                            <input type="text" placeholder="Username" asp-for="@Model.Username">
                            <span class="icon_mail"></span>
                        </div>
                        <div class="input__item">
                            <input type="text" placeholder="Password" asp-for="@Model.Password">
                            <span class="icon_lock"></span>
                        </div>
                        <button type="submit" class="site-btn">Login Now</button>
                    </form>
                    <a href="#" class="forget_pass">Forgot Your Password?</a>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="login__register">
                    <h3>Dont’t Have An Account?</h3>
                    <a asp-controller="Auth" asp-action="SignUp" class="primary-btn" style="color:black;">Register Now</a>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Login Section End -->