@model UpdateDeviceModel

@{
    Layout = "_AdminLayout";
}

<link href="~/CustomStyle/AdminDeviceCommentStyleSheet.css" rel="stylesheet" />

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <p class="card-description"> Update Device Panel </p>
            <form asp-controller="AdminDevice" asp-action="Update" class="forms-sample" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="All"></div>
                <input type="hidden" asp-for="@Model.Id">
                <div class="form-group">
                    <label>Device Name</label>
                    <input type="text" class="form-control" asp-for="@Model.DeviceName">
                </div>
                <div class="form-group">
                    <label>CPU</label>
                    <input type="text" class="form-control" asp-for="@Model.CPU">
                </div>
                <div class="form-group">
                    <label>GPU</label>
                    <input type="text" class="form-control" asp-for="@Model.GPU">
                </div>
                <div class="form-group">
                    <label>MEM</label>
                    <input type="text" class="form-control" asp-for="@Model.MEM">
                </div>
                <div class="form-group">
                    <label>UX</label>
                    <input type="text" class="form-control" asp-for="@Model.UX">
                </div>
                <div class="form-group">
                    <label>TotalScore</label>
                    <input type="text" class="form-control" asp-for="@Model.TotalScore">
                </div>
                <div class="form-group">
                    <label>Price</label>
                    <input type="text" class="form-control" asp-for="@Model.Price">
                </div>
                <div class="form-group">
                    <label>ReleaseYear</label>
                    <input type="text" class="form-control" asp-for="@Model.ReleaseYear">
                </div>
                <div class="form-group">
                    <label>ImageUrl</label>
                    <input type="text" class="form-control" value="@Model.ImageUrl" readonly="readonly"/>
                    <br />
                    <input type="file" class="form-control-file" name="ImageUrl">
                </div>
                <div class="form-group">
                    <label>Device Type</label>
                    <select id="selectList1" class="classic" asp-items="@Model.DeviceType" asp-for="@Model.DeviceTypeId">
                        <option value="0">Select a devicetype.</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>Device OS</label>
                    <select id="selectList2" class="classic" asp-items="@Model.OS" asp-for="@Model.OSId">
                        <option id="option2" value="0">Select a OS.</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>Status</label>
                    <div class="form-check d-flex flex-row justify-content-md-start">
                        <div>
                            <input class="form-check-input" id="radio1" type="radio" name="Status" value="true" @(Model.Status ? "checked" : "")>
                            <label for="radio1" class="form-check-label">Active</label>
                        </div>
                        <div class="ml-5">
                            <input class="form-check-input" id="radio2" type="radio" name="Status" value="false" @(Model.Status ? "" : "checked")>
                            <label for="radio2" class="form-check-label">Inactive</label>
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary mr-2">Save</button>
                <a href="/Admin/AdminDevice/Index" class="btn btn-dark">Cancel</a>
            </form>
        </div>
    </div>
</div>
